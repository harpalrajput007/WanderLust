<% layout('/layouts/boilerplate.ejs') -%>
<body>
<div class="row mt-3">
<div class="col-8 offset-3">
    <h3>Listing Details : </h3>
</div>
<div class="card col-6 offset-3 show-card">
    <img src="<%= oneListing.image.url %>" class="card-img show-img" alt="listing-image">
        <div class="card-body">
            <p class="card-text">
                <b><%= oneListing.title %></b><br>
                <%= oneListing.description %> <br>
                &#8377;<%= oneListing.price.toLocaleString("en-IN") %> <br>
                <%= oneListing.location %> <br>
                <%= oneListing.country %>
            </p>
        </div>
</div>
</div>
<div class="btns">
    <a href="/listings/<%= oneListing._id%>/edit" class="col-1 offset-3 btn btn-dark">Edit</a>
    <form method="POST" action="/listings/<%= oneListing._id%>?_method=DELETE">
        <button class="offset-5 btn btn-dark delete-btn">Delete</button>
    </form>
</div>
</body>